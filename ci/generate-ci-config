#!/bin/sh
cat <<EOF
stages:
  - build
  - publish

image: "$CI_REGISTRY_IMAGE/builder"

variables:
  AWS_DEFAULT_REGION: eu-west-1
  BUCKET: $BUCKET

publish:
  stage: publish
  script:
    - ./ci/publish

.local_package:
  stage: build
  script: 
    - ./ci/build-local "\${CI_JOB_NAME}"
  artifacts:
    paths:
      - "pkg/*.pkg.tar.*"
    expire_in: 1 day

pkg/mdaffin/base:
  extends: .local_package
  needs: []

pkg/mdaffin/desktop:
  extends: .local_package
  needs: ["pkg/mdaffin/base"]

pkg/mdaffin/devel:
  extends: .local_package
  needs: ["pkg/mdaffin/base"]

pkg/mdaffin/gaming:
  extends: .local_package
  needs: ["pkg/mdaffin/desktop"]
EOF

generate_aur_stage() {
cat <<EOF
${1}:
  stage: build
  script: 
    - ./ci/build-aur ${@}
  artifacts:
    paths:
      - "pkg/*.pkg.tar.*"
    expire_in: 1 day
  needs: []
EOF
}

generate_aur_stage aurutils 3.0.3-2 6BC26A17B9B7018A
generate_aur_stage gitlab-cli 0.1.12-2
